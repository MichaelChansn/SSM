<div class="panel-show ">
    <div class="panel panel-primary">
            <div class="panel-heading">
				<span class="user-info text-"><i class=" icon-edit"></i> (<span class="text-danger">$!{user.username}</span>) 的资料</span>
            </div>
			<div class="text-center container ">
				#if(${user.titlepic} && ${user.titlepic.length()}>0)
				<img src="$!{SESSION_WEB_ROOT_PATH}/user/img/$user.id/headerImg/$user.titlepic" class="img-circle img-thumbnail img-responsive center-block" alt="NO IMAGE" height="200" width="200"  >
